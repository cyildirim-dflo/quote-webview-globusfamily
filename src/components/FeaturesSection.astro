---
interface Props {
    section: FeatureHiglightsSection;
}

const { section } = Astro.props as Props;
---

<div class="w-full py-[80px] bg-sectionbg">
    <div class="flex flex-col max-w-screen-2xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-[40px] px-[20px]">{section.title}</h2>
        <span class="text-xl">{section.description}</span>
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-[80px] gap-y-[40px] px-[20px] mt-[40px] max-w-screen-lg mx-auto"
        >
            {
                section.highlights.map((feature) => (
                    <div class="flex flex-col items-center relative add-line-bottom">
                        <img
                            src={feature.image}
                            alt={feature.title}
                            class="h-[90px]"
                        />
                        <h3 class="text-2xl font-bold mt-[18px]">{feature.title}</h3>
                        <p class="text-lg mt-[24px]">{feature.description}</p>
                    </div>
                ))
            }
        </div>
    </div>
</div>
