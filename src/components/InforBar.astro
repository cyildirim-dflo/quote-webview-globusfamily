---
import { Image } from "astro:assets";
import iataAtolAbtaWhite from "../assets/iata-atol-abta-white.svg";
import platinumFeefo2024 from "../assets/platinumfeefo2024.svg";
import { Email, HeadsetMic } from "@mui/icons-material";

interface Props {
    consultant: Consultant;
}

const { consultant } = Astro.props as Props;

---

<div
    class="w-full bg-primary-950 bg-opacity-60 flex flex-row justify-between items-center flex-wrap"
>
    <div class="flex flex-row gap-2 pl-2">
        <Image
            src={platinumFeefo2024}
            alt="Platinium Feefo 2024"
            class="w-24 h-16"
        />
        <Image
            src={iataAtolAbtaWhite}
            alt="IATA ATOL ABTA White"
            class="w-24 h-16"
        />
    </div>
    <div id="contact-details-info-bar" class="flex flex-row gap-1">
        <div class="flex flex-row">
            <Email className="text-primary-50" />
            <p class="text-primary-50 text-sm px-3">
                {consultant.email}
            </p>
        </div>
        <div class="flex flex-row">
            <HeadsetMic className="text-primary-50" />
            <p class="text-primary-50 text-sm px-3">{consultant.phoneNumber}</p>
        </div>
    </div>
</div>
